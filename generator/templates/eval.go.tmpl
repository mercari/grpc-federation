}
{{- else }}
{{ $arg.ProtoComment }}
if err := grpcfed.SetCELValue(ctx, &grpcfed.SetCELValueParam[{{ $arg.Type }}]{
	Value: value,
	Expr: `{{ $arg.CEL.Expr }}`,
	CacheIndex: {{ $def.CELCacheIndex }},
	Setter: func(v {{ $arg.Type }}) error {
		{{- template "setArgumentBySetter" $arg }}
	},
}); err != nil {
